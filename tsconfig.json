{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES6"],
    "module": "NodeNext",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.graphql"],
  "exclude": ["node_modules"],
  "lib": ["es2020"],
  "ts-node": {
    "esm": true
  }
}