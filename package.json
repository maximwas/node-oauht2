{
  "name": "node-oauht2",
  "version": "0.0.1",
  "description": "OAuth 2.0",
  "main": "index.js",
  "repository": "https://github.com/maximwas/node-oauht2.git",
  "author": "m.vasianin <m.vasianin@viseven.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "start": "npm run generate && npm run build && node dist/index.js",
    "build": "rimraf ./dist && npx tsc && npm run copy-graphql",
    "lint": "eslint src/**/*.ts --fix",
    "generate": "graphql-codegen --config codegen.ts",
    "copy-graphql": "copyfiles -u 1 src/**/*.graphql dist",
    "prepare": "husky install"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1"
  }
}
